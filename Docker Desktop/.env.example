# Google Account Automation Environment Configuration

# Application Settings
NODE_ENV=production
LOG_LEVEL=info
PORT=3000

# Rate Limiting
ACCOUNTS_PER_DAY=100
ACCOUNTS_PER_HOUR=10
MIN_DELAY_BETWEEN_ACCOUNTS=120
MAX_DELAY_BETWEEN_ACCOUNTS=600

# Security
ENCRYPTION_KEY=your-secure-encryption-key-minimum-32-characters
JWT_SECRET=your-jwt-secret-key

# Database Configuration
# SQLite (default)
DATABASE_URL=sqlite:///app/data/accounts.db

# PostgreSQL (alternative)
# DATABASE_URL=postgresql://automation:secure-password@postgres:5432/automation
# POSTGRES_DB=automation
# POSTGRES_USER=automation
# POSTGRES_PASSWORD=secure-password

# Redis Configuration (optional)
# REDIS_URL=redis://:secure-redis-password@redis:6379
# REDIS_PASSWORD=secure-redis-password

# Puppeteer Configuration
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_HEADLESS=true
PUPPETEER_VIEWPORT_WIDTH=1366
PUPPETEER_VIEWPORT_HEIGHT=768

# Worker Configuration
MAX_CONCURRENT_WORKERS=5
WORKER_TIMEOUT_MS=300000
WORKER_HEALTH_CHECK_INTERVAL_MS=30000

# Cloudflare Workers (if using)
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_WORKER_URL=https://your-worker.your-subdomain.workers.dev

# Monitoring and Alerts
ENABLE_MONITORING=true
METRICS_ENABLED=true
SUCCESS_RATE_THRESHOLD=0.7
CAPTCHA_RATE_THRESHOLD=0.3

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
NOTIFICATION_EMAIL=admin@yourcompany.com

# Proxy Configuration (optional)
# HTTP_PROXY=http://proxy-server:8080
# HTTPS_PROXY=http://proxy-server:8080
# NO_PROXY=localhost,127.0.0.1

# Development Settings (not used in production)
# DEBUG=automation:*
# DEVELOPMENT_MODE=false